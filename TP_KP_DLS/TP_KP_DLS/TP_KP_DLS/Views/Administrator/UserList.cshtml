@model IEnumerable<TP_KP_DLS.Models.User>

@{
    ViewBag.Title = "UserList";
}

<h2>UserList</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRealName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRealSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRealPatronymic)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRealName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRealSurname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRealPatronymic)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditUser", new { id=item.Id }) |
            @Html.ActionLink("Details", "DetailsUser", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id }) |
            @Html.ActionLink("NewRole", "EditUserRole", new { id = item.Id })
        </td>
    </tr>
}

</table>
